<Layout title="DigitalMoneyTools Blog - Expert Tips for Content Creators" description="Discover expert tips and strategies for content creators to monetize their passion. Learn about YouTube, TikTok, affiliate marketing, personal branding, and more.">
  <div class="container mx-auto px-4 py-12">
    <Breadcrumbs crumbs={crumbs} />
    <h1 class="text-4xl font-bold mb-8 text-center">DigitalMoneyTools Blog</h1>
    <p class="text-xl text-gray-600 mb-12 text-center">Expert tips and strategies for content creators to monetize their passion</p>
    <div class="grid md:grid-cols-2 gap-8">
      {blogPosts.map((post) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
          <img src={post.image} alt={post.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">{post.title}</h2>
            <p class="text-gray-600 mb-4">{post.excerpt}</p>
            <div class="flex justify-between items-center text-sm text-gray-500">
              <span>{post.date}</span>
              <span>{post.author}</span>
            </div>
            <a href={`/blog/${post.id}`} class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-300">Read More</a>
          </div>
        </div>
      ))}
