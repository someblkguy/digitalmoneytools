];

const crumbs = [
  { title: "Pillars", href: "/pillars" }
];
---

<Layout title="Pillar Content - DigitalMoneyTools">
  <div class="container mx-auto px-4 py-12">
    <Breadcrumbs crumbs={crumbs} />
    <h1 class="text-4xl font-bold mb-8 text-center">Pillar Content</h1>
    <p class="text-xl text-gray-600 mb-12 text-center">Dive deep into our comprehensive guides on making money online as a content creator</p>
    <div class="grid md:grid-cols-2 gap-8">
      {pillarPages.map((pillar) => (
        <a href={`/pillars/${pillar.id}`} class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
          <img src={pillar.image} alt={pillar.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <pillar.icon class={`w-16 h-16 ${pillar.color} mb-4`} />
            <h2 class="text-2xl font-semibold mb-2">{pillar.title}</h2>
            <p class="text-gray-600">{pillar.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>